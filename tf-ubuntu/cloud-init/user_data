# run the following cmds after system is booted and rootfs is mounted
runcmd:
  - echo -n '' > /etc/machine-id # clear machine id
  - /bin/systemd-machine-id-setup # make new machine id
  - chsh -s /usr/bin/fish ubuntu # make shell use fish

